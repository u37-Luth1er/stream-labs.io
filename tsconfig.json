{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["src/*"],  // Define o alias '@' para a pasta 'src'
      "@/components/*": ["src/components/*"],  // Define o alias '@components' para a pasta 'src/components'
      "@/types/*": ["src/types/*"]  // Define o alias '@types' para a pasta 'src/types'
    }
  },
  
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    ".next/types/**/*.ts",
    "src/**/*",  // Inclui a pasta 'src'
    "types/**/*"  // Inclui a pasta 'types' caso exista
  ],
  "exclude": ["node_modules"]
}
