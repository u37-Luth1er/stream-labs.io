{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/types/*": ["./app/types/*"], // Alias para 'app/types'
      "@/components/*": ["./components/*"]
    }
  },
  
  "include": ["next-env.d.ts", "**/*.ts", ".next/types/**/*.ts","src/**/*","types/**/*"],
  "exclude": ["node_modules"]

}
