{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["src/*"],  // Define o alias '@' para a pasta 'src'
      "@/types/*": ["src/types/*"]  // Define o alias '@types' para a pasta 'src/types'
    }
  },
  
  "include": ["next-env.d.ts", "**/*.ts", ".next/types/**/*.ts","src/**/*","types/**/*"],
  "exclude": ["node_modules"]

}
